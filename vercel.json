{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 1) Any /api/* → your Express function
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    // 2) Everything else → serve index.html from the static bundle
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}